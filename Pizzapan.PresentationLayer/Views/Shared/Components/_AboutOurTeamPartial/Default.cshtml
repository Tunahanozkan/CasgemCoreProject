@model List<OurTeam>
<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center">
                <h6 class="sub-title">Takımımız</h6>
                <h3 class="title-big">Lezzetimizin Gizli Kahramanları</h3>
            </div>
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-lg-3 col-sm-6 mt-lg-5 mt-4">
                        <div class="box16">
                            <a href="#url"><img src="@item.OurTeamImageUrl" alt="" class="img-fluid radius-image" /></a>
                            <div class="box-content">
                                <h3 class="title"><a href="#url">@item.OurTeamName</a></h3>
                                <span class="post">@item.OurTeamStatus</span>
                                <ul class="social">
                                    <li>
                                        <a href="#" class="facebook">
                                            <span class="fa fa-facebook-f"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="twitter">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>