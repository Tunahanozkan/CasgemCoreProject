@model Pizzapan.PresentationLayer.Models.ConfirmMailView

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Email Onay</title>
</head>
<body>

    <h4>Email Onay Sayfası</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control border" value="@ViewBag.username"  readonly/>
